.figure {
  position: relative;
  overflow: hidden;
  top:0;
  left:0;
}

.figure > div {
  position: absolute;
  top:-100%;
  left:0;
  width: 100%;
  animation-fill-mode: forwards;
}

.image1 {
  animation-name: slideIn;
  animation-duration: 2s;
  animation-timing-function: ease-in-out;
  animation-iteration-count: 1; 
  animation-delay:  0s;
}

  .image2 {
      animation-delay:  0.5s;
